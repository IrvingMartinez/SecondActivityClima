<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="irvingmartinez.clima.SecondActivity">

    <TextView android:text="Clima" android:layout_width="wrap_content"
        android:height="50dp"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_height="wrap_content"
        android:id="@+id/hello"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginTop="20dp"
        android:id="@+id/dia"
        android:layout_below="@+id/hello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tiempo"
        android:layout_alignTop="@+id/imagen"
        android:layout_alignRight="@+id/hello"
        android:layout_alignEnd="@+id/hello"
        android:textColor="#ffffffff"
        android:width="150dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imagen"
        android:layout_below="@+id/dia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
